@{
    ViewBag.Title = "Home Page";
}
@model List<MyPetShop_v3.Models.Pet>
<main>
    <style>
        .carousel-inner img {
            width: 100%;
            height: auto;
            max-height: 500px;
        }

        .pet-info {
            text-align: center;
            margin-top: 20px;
        }

            .pet-info img {
                width: 200px;
                height: 200px;
                object-fit: cover; /* 保持图片比例 */
            }

        .purchase-btn {
            display: block;
            margin: 10px auto;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
            padding: 15px;
            box-sizing: border-box;
        }
    </style>
    <div id="demo" class="carousel slide" data-bs-ride="carousel" data-bs-interval="200">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/ImageIndex/p1.jpg" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/Images/ImageIndex/p2.jpg" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/Images/ImageIndex/p3.png" class="d-block w-100">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
    <div class="container align-content-center">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="pet-info card">
                        <img src="@Model[i].Image" alt="宠物图片" class="card-img-top img-fluid">
                        <div class="card-body">
                            <h5 class="card-title">ID=@Model[i].ID ||@Model[i].Category || @Model[i].Name</h5>
                            <p class="card-text">@Model[i].Descn</p>
                            <p class="card-text"><strong>价格:</strong> $@Model[i].Price</p>
                            <a href="@Url.Action("Buy", "Buy",new { petid = Model[i].ID,petprice = Model[i].Price })" class="btn btn-primary">立即抢购</a>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
</main>